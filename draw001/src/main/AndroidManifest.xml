<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="study.hank.com.draw001">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".activity.CustomDrawableActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.OverlayDrawActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MatrixActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RoundImageViewActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.ScrollViewInnerCustomViewActivity" />
        <activity
            android:name=".activity.ShaderActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".activity.DrawTextActivity" />
        <activity android:name=".activity.OlympicRingsActivity" />
        <activity
            android:name=".activity.nav.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>